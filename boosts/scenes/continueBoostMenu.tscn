script/source = "extends Node2D

onready var animator : AnimationPlayer = $\"animator\"
onready var board : Node2D = $\"..\"
var is_open = false

func _ready():
	pass

func open():
	animator.play(\"open\")
	is_open = true

func close():
	animator.play_backwards(\"open\")
	is_open = false

func is_open():
	return is_open

func yes():
	if !animator.is_playing():
		close()
		continueBoost()
		board.continueBoosts -= 1

func no():
	if !animator.is_playing():
		close()
		board.menu.endGameMenu()

func continueBoost():
	if is_instance_valid(board):
		board.find_node(\"continueBoost\").continueBoost()
"

